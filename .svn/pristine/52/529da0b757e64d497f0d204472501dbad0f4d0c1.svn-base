<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <title>统计分析</title>


    <link th:href="@{/static/dc_file/css/layui.css}" rel="stylesheet" type="text/css"/>
    <link rel="stylesheet" th:href="@{/static/dc_file/css/tjthink.css}">
    <script th:src="@{/static/dc_file/lib/jquery.min.js}"></script>


    <style>

        ::-webkit-scrollbar {
            width: 14px;
            height: 8px;
            background-color: transparent;
        }

        ::-webkit-scrollbar-track {
            background-color: transparent;
        }

        ::-webkit-scrollbar-thumb {
            background-color: rgba(0, 0, 0, .1);
        }

        .layui-laypage .layui-laypage-curr .layui-laypage-em{
            background-color: #1E9FFF!important;
        }

        .layui-nav-tree .layui-nav-item a:hover {
            /*background-color: rgba(3, 107, 164,0.5);*/
        }
        .layui-nav-child dd a {
            color: #666!important;
            background-color:#f1f1f1!important;
        }
        /*.layui-nav-child dl dda:hover {*/
            /*background-color:#d9e6ee!important;*/
        /*}*/
    </style>


    <style>
        * {
            border: none;
        }


    </style>
</head>

<body class="layui-layout-body" style="font-size:12px ">
<div class="layui-layout layui-layout-admin">


    <div class="layui-header  " style="    background-color:rgb(3, 107, 164);">
        <div class="layui-logo" style="color: whitesmoke">统计分析</div>


        <ul class="layui-nav layui-layout-right">
            <li class="layui-nav-item">
                <a href="javascript:;" th:text="${name}">
                    <img class="layui-nav-img"
                         src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1524830996589&di=72721513f19e85075325358a5a7e8fd0&imgtype=0&src=http%3A%2F%2Fimg.zcool.cn%2Fcommunity%2F015f8c565565b76ac7251c94f22968.png">

                </a>
                <dl class="layui-nav-child">
                    <dd><a href="">基本资料</a></dd>

                </dl>
            </li>
            <li class="layui-nav-item"><a href="/logout">退出</a></li>
        </ul>
    </div>

    <div class="layui-side">
        <div id="#basic_header" style="width:200px;height:45px;line-height: 45px;background-color: #028ad6;color: #fff;padding-left: 15px;overflow-x: hidden;position: absolute;z-index: 999">统计分析</div>
        <div class="layui-side-scroll" id="view">
            <!-- 左侧导航区域（可配合layui已有的垂直导航） -->
        </div>
    </div>
    <div class="layui-body">
        <h1 class="site-h1" style="padding: 15px;"><i class="layui-icon"></i><span id="tableTitle"></span></h1>

        <div id="chart" style="width: 100%;height:200px;"></div>
        <div id="shitBar" style="padding: 15px;" ></div>
        <table id="theTable" lay-filter="table" lay-data="{id: 'idTest'}" lay-size="sm" lay-skin="nob"  style="    display: block;"></table>

    </div>


</div>


</body>
<script th:src="@{/static/lib/layui/layui.all.js}"></script>
<script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.min.js"></script>
<script th:src="@{/static/lib/template-web.js}"></script>

<!--基礎信息-->
<script th:src="@{/static/statistics/statisticsshit.js}"></script>

<script th:src="@{/static/statistics/renderHistoryOnlineOffline.js}"></script>
<script th:src="@{/static/statistics/renderAreaIoCount.js}"></script>
<script th:src="@{/static/statistics/renderAreaOverspeedCount.js}"></script>

<script th:src="@{/static/statistics/renderCurrentOnlineOfflineCount.js}"></script>
<script th:src="@{/static/statistics/renderHistoryOnlineTimeCount.js}"></script>
<script th:src="@{/static/statistics/renderMileageOilCount.js}"></script>
<script th:src="@{/static/statistics/renderOperateLog.js}"></script>
<script th:src="@{/static/statistics/renderRouteDeviationCount.js}"></script>
<script th:src="@{/static/statistics/renderSectionOverspeedCount.js}"></script>
<script th:src="@{/static/statistics/renderTimeoutParkingCount.js}"></script>
<script th:src="@{/static/statistics/renderVehicleAlarmCount.js}"></script>
<script th:src="@{/static/statistics/renderVehicleFatigueDrivingCount.js}"></script>
<script th:src="@{/static/statistics/renderVehicleOverspeedCount.js}"></script>


<script th:src="@{/static/statistics/echarts.simple.min.js}"></script>

<!--左側的屎-->
<script id="nav2" type="text/html">
    <ul class="layui-nav layui-nav-tree" lay-filter="test" style="background-color: rgba(3, 107, 164,0.5);">
        {{each data as value }} {{ if value.pid==null }}
        <li class="layui-nav-item">
            <a class="cccc"  >{{ value.text }}

                <span class="layui-nav-more"></span>

            </a> {{set temp = value.id}}
            <dl class="layui-nav-child">
                {{each data as val}} {{ if val.pid== temp }}
                <dd  style=" text-indent:50px;"><a href="javascript:;" onclick="nav_to('{{val.url}}','{{ val.text }}');console.log($(this));$(this).addClass('current_a').parent().siblings('dd').children('a:nth-child(1)').removeClass('current_a');$(this).parent().parent().parent().siblings('li').children('dl').children('dd').children('a:nth-child(1)').removeClass('current_a');" tat="{{ val.text }}">{{ val.text }}</a></dd>
                {{/if}} {{/each}}
            </dl>
        </li>
        {{/if}} {{/each}}
    </ul>
</script>


<script type="text/html" id="moreBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="more">详细</a>
</script>
<script type="text/html" id="expBar">
    <a class="layui-btn layui-btn-primary layui-btn-xs" lay-event="exp">导出</a>
</script>

<script type="text/html" id="deleteBar" class="mmppmm">
    <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
</script>

<script>
    $(function () {
        $(".layui-nav-child dd>a").mouseover(function () {
            $(this).css({"backgroundColor":"#d9e6ee"});
        })
    })
</script>
<script>

        if (window.top !== window.self) {
                jQuery(".layui-header").hide();
                jQuery(".layui-side").css("top", 0);
                jQuery(".layui-body").css("top", 0);
