    <style>
        * {
            border: none;
        }

        /*按钮*/
        #tableMain .icon_div {
            display: inline-block;
            height: 25px;
            width: 35px;

        }

        #tableMain .icon_div a {
            display: inline-block;
            width: 27px;
            height: 20px;
            cursor: pointer;
        }

        /*end--按钮*/

        /*ztree表格*/
        #tableMain  .ztree {
            padding: 0;

        }

        #tableMain  .ztree li a {
            vertical-align: middle;
            height: 30px;
        }

        #tableMain .ztree li > a {
            width: 100%;
        }

        #tableMain .ztree li > a,
        #tableMain .ztree li a.curSelectedNode {
            padding-top: 0px;
            background: none;
            height: auto;
            border: none;
            cursor: default;
            opacity: 1;
        }

        #tableMain .ztree li ul {
            padding-left: 0px
        }

        #tableMain  .ztree div.diy span {
            margin-left: 6px;
            line-height: 30px;
            vertical-align: middle;
        }

        #tableMain  .ztree div.diy {
            height: 100%;
            width: 20%;
            line-height: 30px;
            /*border-top: 1px dotted #ccc;*/
            border-left: 1px solid #eeeeee;
            text-align: center;
            display: inline-block;
            box-sizing: border-box;
            color: #6c6c6c;

            font-size: 12px;
            overflow: hidden;
        }

        #tableMain  .ztree div.diy:first-child {
            text-align: left;
            text-indent: 10px;
            border-left: none;
        }

        #tableMain  .ztree .head {
            background: #5787EB;
        }

        #tableMain .ztree .head div.diy {
            border-top: none;
            border-right: 1px solid #CDD2D4;
            color: #fff;

            font-size: 14px;
        }

        #tableMain .ztree  li a.curSelectedNode {
            background: #0859A8 !important;

        }
        #tableMain .ztree  li a.curSelectedNode div.diy{

            color:white !important;
        }

        .layui-nav-child dd a {
            color: #666!important;
            background-color:#f1f1f1!important;
        }
        /*.layui-nav-child dd a:hover {*/
            /*background-color:#d9e6ee!important;*/
        /*}*/
