<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rayton.gps.dao.lisence.DriverdlDao">
    <!-- Driverdl的resultMap,column是给数据库列起的别名,它对应property类的属性-->
    <resultMap id="result_Driverdl_Map" type="com.rayton.gps.dao.lisence.Driverdl">
        <id column="d_l_id" jdbcType="INTEGER" property="dlId"/>
        <result column="driver_id" jdbcType="VARCHAR" property="driverId"/>
    </resultMap>

    <!-- Assist用于辅助工具类setRequires设置的条件,${req.require}表示列名,#{req.value}表示值它是防SQL注入的 -->
    <sql id="Assist">
        <where>
            <foreach collection="require" item="req" separator=" ">
                ${req.require}
                <if test="req.value != null">#{req.value}</if>
                <if test="req.values != null">
                    <foreach collection="req.values" item="val" separator=",">
                        #{val}
                    </foreach>
                </if>
                <if test="req.suffix != null">${req.suffix}</if>
            </foreach>
        </where>
    </sql>

    <!-- updateAssist用于更新数据的使用它拓展自Assist,用于辅助工具类setRequires设置的条件,${req.require}表示列名,#{req.value}表示值它是防SQL注入的 -->
    <sql id="updateAssist">
        <where>
            <foreach collection="assist.require" item="req" separator=" ">
                ${req.require}
                <if test="req.value != null">#{req.value}</if>
                <if test="req.values != null">
                    <foreach collection="req.values" item="val" separator=",">
                        #{val}
                    </foreach>
                </if>
                <if test="req.suffix != null">${req.suffix}</if>
            </foreach>
        </where>
    </sql>

    <!-- 数据库中表名为:driver_d_l的列名,as前是数据库的列明,as后是列的别名用于映射成实体类中的属性,需要注意的是别名必须与resultMap中的column别名一致 -->
    <sql id="driver_d_l_Column">
        driver_d_l.d_l_id as d_l_id
        ,driver_d_l.driver_id as driver_id
    </sql>

    <!--获得类名为:Driverdl对应的数据库表的数据总行数 -->
    <select id="getDriverdlRowCount" parameterType="com.rayton.gps.util.Assist" resultType="java.lang.Long">
        select count(d_l_id) from driver_d_l
        <if test="require!=null">
            <include refid="Assist"/>
        </if>
    </select>
    <!-- 获得类名为:Driverdl对应数据库中表的数据集合 -->
    <select id="selectDriverdl" parameterType="com.rayton.gps.util.Assist" resultMap="result_Driverdl_Map">
        select
        <if test="distinct !=null">${distinct}</if>
        <choose>
            <when test="resultColumn!=null">${resultColumn}</when>
            <otherwise>
                <include refid="driver_d_l_Column"/>
            </otherwise>
        </choose>
        from driver_d_l
        <choose>
            <when test="rowSize ==null">
                <if test="require!=null">
                    <include refid="Assist"/>
                </if>
                <if test="order !=null">${order}</if>
            </when>
            <otherwise>
                inner join
                (
                SELECT d_l_id as primary_key FROM driver_d_l
                <if test="require!=null">
                    <include refid="Assist"/>
                </if>
                <if test="order !=null">${order}</if>
                <choose>
                    <when test="startRow !=null and rowSize !=null">LIMIT
                        #{startRow,jdbcType=INTEGER},#{rowSize,jdbcType=INTEGER}
                    </when>
                    <when test="rowSize !=null">LIMIT #{rowSize,jdbcType=INTEGER}</when>
                </choose>
                ) as tmp
                on tmp.primary_key=driver_d_l.d_l_id
            </otherwise>
        </choose>
    </select>

    <!-- 获得一个Driverdl对象,以参数Driverdl对象中不为空的属性作为条件进行查询-->
    <select id="selectDriverdlByObj" parameterType="com.rayton.gps.dao.lisence.Driverdl"
            resultMap="result_Driverdl_Map">
        select
        <include refid="driver_d_l_Column"/>
        from driver_d_l
        <where>
            <if test="driverId != null ">and driver_d_l.driver_id = #{driverId,jdbcType=VARCHAR}</if>
            <if test="dlId != null ">and driver_d_l.d_l_id = #{dlId,jdbcType=INTEGER}</if>
        </where>
    </select>

    <!-- 通过Driverdl的id获得对应数据库中表的数据对象-->
    <select id="selectDriverdlById" parameterType="java.lang.Integer" resultMap="result_Driverdl_Map">
        select
        <include refid="driver_d_l_Column"/>
        from driver_d_l
        where driver_d_l.d_l_id = #{id,jdbcType=INTEGER}
    </select>

    <!-- 将Driverdl插入到对应数据库的表中,包括属性值为null的数据-->

    <insert id="insertDriverdl" parameterType="com.rayton.gps.dao.lisence.Driverdl">
        insert into driver_d_l(d_l_id,driver_id)
        values(#{dlId,jdbcType=INTEGER},#{driverId,jdbcType=VARCHAR})
    </insert>

    <!-- 将Driverdl中属性值不为null的数据,插入到对应数据库的表中-->
    <insert id="insertNonEmptyDriverdl" parameterType="com.rayton.gps.dao.lisence.Driverdl">
        insert into driver_d_l
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="dlId != null">d_l_id,</if>
            <if test="driverId != null">driver_id,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="dlId != null">#{dlId,jdbcType=INTEGER},</if>
            <if test="driverId != null">#{driverId,jdbcType=VARCHAR},</if>
        </trim>
    </insert>

    <!-- 将Driverdl批量插入到对应数据库的表中-->
    <insert id="insertDriverdlByBatch" parameterType="ArrayList">
        insert into driver_d_l(d_l_id,driver_id) values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.dlId,jdbcType=INTEGER},#{item.driverId,jdbcType=VARCHAR})
        </foreach>
    </insert>

    <!-- 通过Driverdl的id将数据库表中对应的数据删除-->
    <delete id="deleteDriverdlById" parameterType="java.lang.Integer">
        delete from driver_d_l
        where d_l_id = #{id,jdbcType=INTEGER}
    </delete>

    <!-- 通过辅助工具Assist中的条件将Driverdl对应的数据库表的数据删除-->
    <delete id="deleteDriverdl" parameterType="com.rayton.gps.util.Assist">
        delete from driver_d_l
        <if test="require!=null">
            <include refid="Assist"/>
        </if>
    </delete>

    <!-- 通过Driverdl的id将Driverdl的数据更新到数据库中对应的表,包括值null的数据-->
    <update id="updateDriverdlById" parameterType="com.rayton.gps.dao.lisence.Driverdl">
        update driver_d_l set
        driver_id=#{driverId,jdbcType=VARCHAR}
        where d_l_id=#{dlId,jdbcType=INTEGER}
    </update>

    <!-- 通过Driverdl的id将Driverdl中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyDriverdlById" parameterType="com.rayton.gps.dao.lisence.Driverdl">
        update driver_d_l
        <set>
            <if test="driverId != null">
                driver_id=#{driverId,jdbcType=VARCHAR},
            </if>
        </set>
        where d_l_id=#{dlId,jdbcType=INTEGER}
    </update>

    <!-- 通过辅助工具Assist中的条件将Driverdl中的数据更新到数据库对应的表中,包括值为null的数据-->
    <update id="updateDriverdl" parameterType="map">
        update driver_d_l
        <set>
            d_l_id=#{enti.dlId,jdbcType=INTEGER},
            driver_id=#{enti.driverId,jdbcType=VARCHAR},
        </set>
        <if test="assist.require!=null">
            <include refid="updateAssist"/>
        </if>
    </update>

    <!-- 通过辅助工具Assist中的条件将Driverdl中属性值不为null的数据更新到数据库对应的表中-->
    <update id="updateNonEmptyDriverdl" parameterType="map">
        update driver_d_l
        <set>
            <if test="enti.dlId != null">
                d_l_id=#{enti.dlId,jdbcType=INTEGER},
            </if>
            <if test="enti.driverId != null">
                driver_id=#{enti.driverId,jdbcType=VARCHAR},
            </if>
        </set>
        <if test="assist.require!=null">
            <include refid="updateAssist"/>
        </if>
    </update>

</mapper>