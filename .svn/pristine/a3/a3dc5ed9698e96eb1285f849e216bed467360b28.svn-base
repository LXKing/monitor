<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>车辆监控系统</title>
    <link th:href="@{/static/css/site.css}" rel="stylesheet" type="text/css"/>


    <link th:href="@{/static/images/monitor.ico}" rel="icon" type="image/x-icon"/>
    <link th:href="@{/static/images/monitor.ico}" rel="shortcut" type="image/x-icon"/>
    <style type="text/css">
        *:focus {
            outline: none
        }

        body {
            background-color: #1874bf;
        }

        #btnCodeVerify {
            cursor: pointer;
            vertical-align: middle;
        }
    </style>
</head>

<body>
<form method="POST" action="/">
    <div class="login-box">
        <div class="area">
            <div class="form">

                <input name="account" autocomplete="off"/>
                <div class="display-error" th:text="${account}">

                </div>

                <!--<input type="password" style="display: none">-->
                <input type="password" name="pwd" autocomplete="off"/>

                <div class="display-error" th:text="${pwd}">

                </div>

                <input name="verify"/>
                <div class="display-error" th:text="${error}">

                </div>

                <img id="btnCodeVerify" alt="验证码" src="code.verify"
                     onClick="document.getElementById('btnCodeVerify').src='code.verify?temp='+ Math.random(); return false">
                <div style="height: 40px; width: 400px; margin-top: 16px;">
                    <input type="submit" value="登 录" class="login-button"/> <input
                        type="reset" value="重 填" class="login-button"/>
                </div>
                <div class="exception mon-left">

                </div>
            </div>
        </div>
    </div>
</form>
</body>
</html>
