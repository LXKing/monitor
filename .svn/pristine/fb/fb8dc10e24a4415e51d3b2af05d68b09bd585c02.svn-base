$.fn.extend({
  updatecolor:function (data,returndata) {
      var target = $(this);

      console.log(target);

      for(var i =0;i<target.length;i++){
          var targettd = target[0].childNodes[1];
      $.each(data,function (index,datasource) {
          switch(datasource.o){
              case 0:
                  targettd.style="color:#A0A0A0"//离线
                  break;
              case 1:
                 /* targettd.style="color:#c9c9c9"*/
                  break;
              case 2:
                  targettd.style="color:red"//报警
                  break;
          }
          returndata(index,datasource.o,target);


      });

      }
  }
})