<!DOCTYPE html>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <meta charset="UTF-8">
    <title>出了点问题</title>

    <style>
        * {
            font-family: "Microsoft Yahei";
            margin: 0;
            font-weight: lighter;
            text-decoration: none;
            text-align: center;
            line-height: 2.2em;
        }

        html, body {
            height: 100%;
        }

        h1 {
            font-size: 100px;
            line-height: 1em;
        }

        table {
            width: 100%;
            height: 100%;
            border: 0;
        }
    </style>
</head>
<body>
<table cellspacing="0" cellpadding="0">
    <tr>
        <td>
            <table cellspacing="0" cellpadding="0">
                <tr>
                    <td>
                        <h2>大事不妙啦！<span class="face">🙁</span></h2>

                        <div th:text="${msg}"></div>
                        <span id="mes"></span>秒后跳转到首页

                    </td>
                </tr>
            </table>
        </td>
    </tr>
</table>
</body>

<script>
    var i = 3;  //这里是倒计时的秒数
    var intervalid;
    intervalid = setInterval("cutdown()", 1000);

    function cutdown() {
        if (i == 0) {
            window.location.href = "/home"; //倒计时完成后跳转的地址
            clearInterval(intervalid);
        }
        document.getElementById("mes").innerHTML = i;
        i--;
    }

    window.onload = cutdown;
</script>
</html>