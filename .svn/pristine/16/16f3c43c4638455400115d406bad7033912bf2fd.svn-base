body {
    color: #ffffff;
    font-family: 'Arial';
    padding: 0px !important;
    margin: 0px !important;
    font-size: 13px;
    /* overflow-x: hidden; */
    background: #ffffff;
}

#header.navbar {
    min-width: 0px;
}

#header.navbar-inverse .navbar-inner {
    background-color: #4a8bc2;
    background-image: -moz-linear-gradient(top, #4a8bc2, #4a8bc2);
    background-image: -webkit-gradient(linear, 0 0, 0 100%, from(#4a8bc2), to(#4a8bc2));
    background-image: -webkit-linear-gradient(top, #4a8bc2, #4a8bc2);
    background-image: -o-linear-gradient(top, #4a8bc2, #4a8bc2);
    background-image: linear-gradient(to bottom, #4a8bc2, #4a8bc2);
    background-repeat: repeat-x;
    border-color: #4a8bc2;
    color: #fff;
}

#header.navbar-inverse .navbar-inner {
    height: 60px;
    border: none !important;
}

#header .navbar-inner {
    top: 0px;
    width: 100%;
    margin: 0px !important;
    margin-bottom: -2px !important;
    border-top: 0px !important;
    border-left: 0px !important;
    border-right: 0px !important;
    padding: 0px;
}

.navbar-inner, .navbar-fixed-top .navbar-inner, .navbar-static-top .navbar-inner {
    box-shadow: none;
}

.notify-row {
    padding: 5px;
}

.navbar .nav > li {
    float: left;
}

#header .navbar-inner .nav > li {
    margin-left: 0px !important;
    margin-right: 0px !important;
}

.fixed-top #container {
    margin-top: 60px;
}

@media (min-width: 1200px ) {
    .row-fluid {
        width: 100%;
    }
}

.sidebar-scroll {
    position: fixed;
    overflow-y: scroll;
    height: 100%;
    width: 180px;
    z-index: 100;
}

@media (min-width: 980px) {
    .fixed-top #main-content {
        margin-top: 20px;
    }
}

@media (min-width: 980px) {
    #main-content {
        margin-top: 0px !important;
    }
}

#main-content {
    margin-top: 0px;
    margin-left: 180px;
    min-height: 1000px;
    background: #fff;
    margin-bottom: 40px !important;
}

html {

    　　-webkit-text-size-adjust: none;
}

.small-font {
    font-size: 9px;
    -webkit-transform-origin-x: 0;
    -webkit-transform: scale(0.90);
}

.smallsize-font {
    　font-size: 9.8px;
}
