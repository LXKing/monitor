/*公共头部开始*/
header {
  height: 80px;
  // overflow: hidden;
  .left_logo {
    width: 20%;
    height: 100%;
    background-color: #0e81fe;
    // background-color: red;
  }
  .right_tools {
    width: 80%;
    height: 100%;
    nav {
      width: 90%;
      height: 100%;
      background-color: #0e81fe;
      float: left;
      ul {
        display: flex;
        justify-content: space-around;
        li {
          color: #fff;
          //   position: relative;
          span {
            //   position: absolute;
            //   left: 58px;
            //   top: 55px;
            font-size: 12px;
            // padding-left: 0;  
          }
          img {
            display: block;
          }
        }
      }
    }
    .user-info {
      width: 10%;
      height: 100%;
      background-color: #0e81fe;
      float: left;
      border-left: 2px solid #000;
      box-sizing: border-box;
      .user {
        width: 100%;
        height: 51px;
        font-size: 12px;
        margin-top: 31px;
        a {
          width: 50%;
          color: #fff;
        }
        a:nth-child(1) {
          padding-left: 10px;
          padding-right: 15px;
          border-right: 1px solid #000;
        }
        a:nth-child(2) {
          padding-left: 5px;
        }
        a:nth-child(4) {
          padding-left: 20px;
          border-left: 1px solid #000;
        }
      }
    }
  }
}

/*公共头部结束*/

