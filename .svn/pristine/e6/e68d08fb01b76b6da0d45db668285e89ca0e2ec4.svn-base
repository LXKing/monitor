/*公共类*/
* {
  margin: 0;
  padding: 0;
}
html,
body {
  width: 100%;
  height: 100%;
}
body {
  min-width: 996px;
  font-size: 12px;
  color: #fff;
}
img {
  max-width: 100%;
  border: 0;
  vertical-align: middle;
  /*  去掉图片底部默认的3像素空白缝隙*/
}
.fl {
  float: left;
}
.fr {
  float: right;
}
.cl_fl {
  clear: left;
}
.cl_fr {
  clear: right;
}
.clear {
  clear: both;
}
a {
  text-decoration: none;
}
ul,
ol {
  list-style: none;
}
