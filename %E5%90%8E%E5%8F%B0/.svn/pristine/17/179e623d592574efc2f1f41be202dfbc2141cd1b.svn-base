/*公共类*/
* {
    margin: 0;
    padding: 0;
}

html,
body {
    width: 100%;
    height: 100%;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

a {
    text-decoration: none;
}

.login_page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

/*登录框详情栏开始*/
.login_info {
    width: 50.25%;
    height: 100%;
}

.login_info .login_info_in {
    width: 43.6%;
    height: 93%;
    margin: 0 auto;
}

.login_info .login_info_in .form .in_box1 {
    position: relative;
}

.login_info .login_info_in .form .in_box1 input {
    width: 100%;
    height: 50px;
    /*border-radius: 5px;*/
    border: 1px solid grey;
    font-size: 20px;
    text-indent: 60px;
    margin-bottom: 10px;
    height: 50px !important;

    border: 1px solid grey !important;
}

.login_info .login_info_in .form .in_box1 .icon_1 {
    position: absolute;
    left: 10px;
    top: 16px;
    width: 60px;
    height: 60px;
}

.login_info .login_info_in .form .in_box2 {
    position: relative;
    margin-top: 0.74%;
}

.login_info .login_info_in .form .in_box2 input {
    width: 100%;
    height: 66px;
    /*border-radius: 5px;*/
    border: 2px solid grey;
    font-size: 20px;
    text-indent: 60px;
    height: 50px !important;

    border: 1px solid grey !important;
}

.login_info .login_info_in .form .in_box2 .icon_2 {
    position: absolute;
    left: 10px;
    top: 16px;
    width: 60px;
    height: 60px;
}

.login_info .login_info_in .form .t_code {
    width: 100%;
    margin-top: 0.74%;
    overflow: hidden;
}

.login_info .login_info_in .form .t_code .in_box3 {
    position: relative;
}

.login_info .login_info_in .form .t_code .in_box3 input {
    width: 58%;
    height: 33px;
    text-indent: 5px;
    border: 2px solid grey;
    text-indent: 30px;
    font-size: 18px;

    border: 1px solid grey !important;
}

.login_info .login_info_in .form .t_code .in_box3 .icon_3 {
    background: url(../../image_l/newcode.png) no-repeat 0 0;
    position: absolute;
    left: 4px;
    top: 5px;
    color: skyblue;
    font-size: 26px;
}

.login_info .login_info_in .form .t_code img {
    padding-left: 5px;
    width: 38%;
    height: 33px;
}

.login_info .login_info_in .form .othercontrol {
    margin-top: 0.74%;
    width: 100%;
    display: flex;
    justify-content: space-between;
}

.login_info .login_info_in .form .othercontrol a {
    color: #1881b1;
    font-weight: bold;
}

.login_info .login_info_in .form .login_button {
    margin-top: 1.4%;
    width: 100%;
    height: 45px;
    line-height: 45px;
    text-align: center;
    color: #fff;
    font-weight: bold;
    background-color: #1881b1;
    font-size: 20px;
    cursor: pointer;
    outline: none;
    border: none;
}

.login_info .login_info_in .morelink {
    margin-top: 20%;
    width: 100%;
    display: flex;
    justify-content: center;
}

.login_info .login_info_in .morelink img:nth-child(1) {
    padding-right: 15px;
}

.login_info .login_info_in .morelink img:nth-child(3) {
    padding-left: 15px;
}

/*登录框详情栏结束*/
/*宣传展示图开始*/
.banner {
    /*width: 49.75%;*/
    height: 100%;
    padding-right: 100px;
}

.banner img {
    height: 100%;
}

/*宣传展示图结束*/

.form div {
    margin-bottom: 20px;
}

.form div input {

}