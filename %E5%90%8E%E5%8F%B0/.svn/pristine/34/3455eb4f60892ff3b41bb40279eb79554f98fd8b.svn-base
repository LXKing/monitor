
.l-layout-content .l-children {
    transform: translate(25%, 0);
}

#catalog {
    width: 200px;
}

.l-tree .l-box {
    background: none;
}

.mon-top {
    height: 100px;
}

.l-tree .l-tree-icon-folder-open {
    background: url(../../skins/Aqua/images/tree/tree.gif);
    background-position: -44px -88px;
}

.l-tree .l-expandable-close {
    background: url(../../skins/Aqua/images/tree/tree.gif);
    background-position: 0px -44px;
    position: absolute;
    left: 75px;
}

.l-tree .l-tree-icon-folder {
    background: url(../../skins/Aqua/images/tree/tree.gif);
    background-position: -22px -88px;
}

.l-tree .l-expandable-open {
    background: url(../../skins/Aqua/images/tree/tree.gif);
    position: absolute;
    left: 75px;
}

.l-layout-header, .l-tree a, .l-tree span {
    color: #78B8F5;
}

.metro-gray {
    background-color: orange;
}